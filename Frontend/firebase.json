{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "rewrites": [
    {
      "source": "/__/auth/handler",
      "function": "app"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
